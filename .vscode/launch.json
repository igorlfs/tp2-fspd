{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Stock Server",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "${workspaceFolder}/src/stock_server.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "8888"
            ]
        },
        {
            "name": "Launch Stock Client",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "${workspaceFolder}/src/stock_client.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "0.0.0.0:8888"
            ]
        },
        {
            "name": "Launch Order Server",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "${workspaceFolder}/src/order_server.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "8889",
                "0.0.0.0:8888"
            ]
        }
    ]
}
